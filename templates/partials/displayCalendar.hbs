<displayCalendar>
    <meta charset='utf-8' />
        <link href='/packages/core/main.css' rel="stylesheet"/>
        <link href='/packages/daygrid/main.css' rel="stylesheet" />
        <script src='/packages/core/main.js'></script>
        <script src='/packages/interaction/main.js'></script>
        <script src='/packages/daygrid/main.js'></script>
        <script>
  document.addEventListener('DOMContentLoaded', function() {
    var calendarEl = document.getElementById('calendar');
    var calendar = new FullCalendar.Calendar(calendarEl, {
      plugins: [ 'interaction', 'dayGrid' ],
      // defaultDate: '2019-08-12',
      editable: true,
      eventLimit: true, // allow "more" link when too many events
      events: [
        {{#each event}}
        {
          title: '{{this.event_name}}',
          start: '{{this.start_date}}'{{#if this.end_date}},
          end: '{{this.end_date}}'{{/if}}{{#if this.start_recurring}},
          groupId: {{this.group_id}},
          daysOfWeek: [{{this.days_of_week}}],
          startRecur: '{{this.start_recurring}}',
          endRecur: '{{this.end_recurring}}',
          {{/if}}
        },
        {{/each}}
        {
          title: 'Filler event so the commas work out',
          start: '2019-08-01'
        }
      ]
    });
    calendar.render();
  });
</script>
        <style>
        body {
            margin: 40px 10px;
            padding: 0;
            font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
            font-size: 14px;
        }
        #calendar {
            max-width: 900px;
            margin: 0 auto;
        }
        </style>
</displayCalendar>